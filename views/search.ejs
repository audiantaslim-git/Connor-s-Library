<%- include ("header.ejs") %>

<div class="lg:px-[160px] lg:pt-[144px] lg:pb-[40px]">
    <h1 class="font-opensans lg:text-md lg:mb-[40px] lg:font-light text-[#85898f]">Showing <%= content.length %> of <%= totalItems %> results for "<%= query %>"</h1>
    <div class="grid lg:grid-cols-[6fr_4fr] gap-4">
        <div class="">
            <% content.forEach((content) => {%>
            <div class="grid lg:grid-cols-[160px_auto] lg:h-auto lg:mb-[72px]">
                <img src="<%= content.image %>" alt="Book Title" class="lg:w-[160px] lg:h-[248px] object-cover rounded-xl overflow-hidden border border-[#ededed]">
                <div>
                    <h3 class="font-merriweather lg:text-xl lg:font-regular lg:mt-[8px] lg:ml-[32px] text-[#594A42]"><%= content.title %></h3>
                    <h2 class="lg:text-md lg:font-light lg:mt-[10px] lg:ml-[32px] text-[#85898f]"><%= content.authors %></h2>
                    <p class="lg:text-sm lg:font-light lg:mt-[10px] lg:ml-[32px] text-[#54575c]"><%= truncate(content.description, 40) %></p>
                    <p class="lg:text-sm lg:font-regular lg:mt-[8px] lg:ml-[32px] text-[#727982]">Rating: ‚≠ê <%= content.averageRating %></p>
                </div>
                
                
            </div>
            <% }) %>
            <%- include("pagination.ejs", {
                currentPage : currentPage
            }) %>
        </div>
        
    </div>
</div>
    

</body>
</html>